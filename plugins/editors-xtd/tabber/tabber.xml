<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" group="editors-xtd" version="1.6">
	<name>PLG_EDITORS-XTD_TABBER</name>
	<description>PLG_EDITORS-XTD_TABBER_DESC</description>
	<version>2.1.0FREE</version>
	<creationDate>May 2012</creationDate>
	<author>NoNumber (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2012 NoNumber All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="tabber">tabber.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</files>

	<!-- Parameters -->
	<config>
		<fields name="params" addfieldpath="/plugins/system/nnframework/fields">
			<fieldset name="basic">
				<field name="@loadlanguage" type="nn_loadlanguage" extension="plg_editors-xtd_tabber" />
				<field name="@license" type="nn_license" extension="TABBER" />
				<field name="@version" type="nn_version" extension="TABBER" xml="/plugins/editors-xtd/tabber/tabber.xml" />
				<field name="@dependency" type="nn_dependency"
					label="TBR_THE_SYSTEM_PLUGIN"
					file="/plugins/system/tabber/tabber.php" />
				<field name="@header" type="nn_header"
					label="TABBER"
					description="TABBER_DESC"
					xml="/plugins/editors-xtd/tabber/tabber.xml"
					image="/plugins/editors-xtd/tabber/images/logo.png"
					image_w="120" image_h="160"
					url="http://www.nonumber.nl/tabber"
					help_url="http://www.nonumber.nl/tabber" />

				<field name="@notice_settings" type="nn_plaintext" description="TBR_SETTINGS" />
			</fieldset>
		</fields>
	</config>
</install>